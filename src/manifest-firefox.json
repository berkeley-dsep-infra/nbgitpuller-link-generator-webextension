{
    "manifest_version": 4,
    "name": "DataHub Link Generator",
    "version": "4.0",
    "description": "Generate shareable DataHub links directly from GitHub",
    "icons": {
        "32": "icon_32.png"
    },
    "browser_action": {
        "default_popup": "popup_disabled.html",
        "default_title": "DataHub Link Generator",
        "default_icon": {
            "32": "icon_32.png"
        }
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'"
}
